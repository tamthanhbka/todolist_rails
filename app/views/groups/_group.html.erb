<div id="<%= dom_id group %>">
  <p>
    <strong>Name:</strong>
    <%= group.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= group.description %>
  </p>

  <p>
    <strong>Invite code:</strong>
    <%= group.invite_code %>
  </p>

  <p>
    <strong>Creator:</strong>
    <%= group.creator_id %>
  </p>

  <p>
    <strong>Task for group:</strong>
    <% if group.tasks.empty? %>
    <p>There are no tasks for this group</p>
  <% else %>
    <table>
      <tr>
        <th>Task name</th>
        <th>Task description</th>
        <th>Task due date</th>
      </tr>
      <% group.tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= task.description %></td>
          <td><%= task.due_date %></td>
          <td><%= link_to 'Show', task %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
  </p>
</div>
